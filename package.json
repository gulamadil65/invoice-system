{
  "name": "inventory-management",
  "version": "1.0.0",
  "private": true,
  "description": "Inventory Management System",
  "main": "dist-electron/electron.js",
  "author": "adilman",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack",
    "build:web": "next build",
    "export": "next export",
    "start": "next start",
    "lint": "next lint",
    "electron": "electron .",
    "elec": "electron-builder",
    "build:electron": "tsc -p tsconfig.electron.json && ren dist-electron\\electron.js electron.cjs",
    "build:app": "npm run build:web && npm run build:electron && electron-builder"
  },
  "build": {
    "electronVersion": "28.2.3",
    "appId": "com.yourapp.invoice",
    "productName": "JK Sarees",
    "files": [
      "dist-electron/**/*",
      "out/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "@capacitor/filesystem": "^6.0.2",
    "@capacitor/share": "^6.0.3",
    "@heroicons/react": "^2.1.5",
    "@mantine/core": "^7.13.5",
    "@mantine/hooks": "^7.13.5",
    "@prisma/client": "^6.0.1",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-tooltip": "^1.1.8",
    "@supabase/supabase-js": "^2.49.4",
    "@swc/cli": "^0.5.2",
    "@types/bcrypt": "^5.0.2",
    "axios": "^1.8.4",
    "backup": "^1.1.0",
    "bcrypt": "^5.1.1",
    "capacitor": "^0.5.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdlet": "^0.0.2",
    "cross-spawn": "^7.0.6",
    "electron-forge": "^5.2.4",
    "esbuild": "^0.25.4",
    "execa": "^9.5.1",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "lucide": "^0.462.0",
    "lucide-react": "^0.456.0",
    "next": "^15.3.2",
    "next-auth": "^4.24.11",
    "node.js": "^0.0.1-security",
    "prisma": "^6.0.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.3.0",
    "react-pull-to-refresh": "^2.0.1",
    "react-select": "^5.10.1",
    "react-to-print": "^3.0.2",
    "react-toastify": "^10.0.6",
    "supabase": "^2.34.3",
    "swc": "^1.0.11",
    "tailwind-merge": "^2.5.4",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^11.0.2",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@capacitor/android": "^6.2.1",
    "@capacitor/cli": "^6.2.1",
    "@capacitor/core": "^6.2.1",
    "@tauri-apps/cli": "^2.5.0",
    "@types/electron": "^1.6.10",
    "@types/jspdf": "^1.3.3",
    "@types/next": "^8.0.7",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/uuid": "^10.0.0",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^28.2.3",
    "electron-builder": "^25.1.8",
    "electron-packager": "^17.1.2",
    "eslint": "^8",
    "eslint-config-next": "15.0.2",
    "eslint-plugin-import": "^2.31.0",
    "next-transpile-modules": "^10.0.1",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5",
    "wait-on": "^8.0.3"
  }
}
