{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "outDir": "dist-electron",
    "rootDir": "src/dist-electron",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "types": ["node", "electron"]
  },
  "include": ["src/dist-electron/**/*"],
  "exclude": ["node_modules"]
}
